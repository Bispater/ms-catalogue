# ====================
# Configuración Django
# ====================
DEBUG=False
SECRET_KEY=reemplaza_con_una_clave_secreta_segura_y_unica
ALLOWED_HOSTS=.tudominio.com,localhost,127.0.0.1

# Configuración de idioma y zona horaria
LANGUAGE_CODE=es-pe
TIME_ZONE=America/Lima
USE_I18N=True
USE_L10N=True
USE_TZ=True

# ====================
# Base de Datos (PostgreSQL)
# ====================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=ms_catalogue_prod
DB_USER=usuario_db
DB_PASSWORD=contraseña_segura_db
DB_HOST=db
DB_PORT=5432

# ====================
# Redis (Para caché y Celery)
# ====================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=contraseña_redis_segura

# ====================
# Configuración de Email
# ====================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña_de_app_especifica
DEFAULT_FROM_EMAIL=noreply@tudominio.com
SERVER_EMAIL=errores@tudominio.com

# ====================
# Almacenamiento en la Nube (S3)
# ====================
# AWS Settings
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_STORAGE_BUCKET_NAME=ms-catalogue-prod
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=${AWS_STORAGE_BUCKET_NAME}.s3.amazonaws.com
AWS_DEFAULT_ACL=public-read
AWS_QUERYSTRING_AUTH=False

# Para servir archivos estáticos y media desde S3
USE_S3=True
STATICFILES_STORAGE=storages.backends.s3boto3.S3Boto3Storage
DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage

# ====================
# Seguridad
# ====================
# Solo en producción
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000  # 1 año
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY
CSRF_TRUSTED_ORIGINS=https://*.tudominio.com,https://tudominio.com

# ====================
# Configuración de CORS
# ====================
CORS_ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com
CORS_ALLOW_CREDENTIALS=True

# ====================
# Configuración de CKEditor
# ====================
CKEDITOR_UPLOAD_PATH=uploads/
CKEDITOR_IMAGE_BACKEND=pillow
CKEDITOR_JQUERY_URL=//ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js
CKEDITOR_CONFIGS={
    'default': {
        'toolbar': 'full',
        'height': 300,
        'width': '100%',
    },
    'basic': {
        'toolbar': 'Basic',
        'height': 100,
        'width': '100%',
    },
}

# ====================
# Configuración de Celery
# ====================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_ACCEPT_CONTENT=['json']
CELERY_TASK_SERIALIZER='json'
CELERY_RESULT_SERIALIZER='json'
CELERY_TIMEZONE=${TIME_ZONE}

# ====================
# Otras configuraciones
# ====================
# Sentry para monitoreo de errores
SENTRY_DSN=https://tuservidor.sentry.io/tu-proyecto

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Configuración de reCAPTCHA (opcional)
RECAPTCHA_PUBLIC_KEY=tu_clave_publica
RECAPTCHA_PRIVATE_KEY=tu_clave_privada

# Configuración de pagos (ejemplo con Stripe)
STRIPE_PUBLIC_KEY=pk_test_tu_clave_publica
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secreto
